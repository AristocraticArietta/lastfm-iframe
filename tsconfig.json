{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@api/*": ["src/pages/api/*"],
      "@js/*": ["src/js/*"],
      "@src/*": ["src/*"],
    },
    "baseUrl": ".",
    "strictNullChecks": true,
    "allowJs": true,
    "target": "esnext",
  }
}
